	salt = cry[0:2]
	dict = open('dict.txt','r')
	for word in dict.readlines():
		word = word.strip('\n')
		cryptPass = crypt.crypt(word,salt)
		if (cry == cryptPass):
			print(colored("Found password: " +word,'green'))
			return
	print()
		else:
			print(colored("Password not found",'red'))
			return

